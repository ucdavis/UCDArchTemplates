@model UcdArchTemplates.Web.Models.Customer

@{
    ViewBag.Title = "Delete";
}

<h2>Delete</h2>


@section SubNav
{
	<li>@Html.ActionLink("Back to List", "Index")</li>
}

<h3>Are you sure you want to delete this?</h3>

<form method="POST" class="form-horizontal well-small" novalidate="novalidate">
	@Html.AntiForgeryToken()

	<fieldset>
        <legend>Customer</legend>		
		<div class="control-group">
			<label class="control-label">CompanyName</label>
			<div class="controls form-text">@Model.CompanyName</div>
		</div>
		<div class="control-group">
			<label class="control-label">ContactName</label>
			<div class="controls form-text">@Model.ContactName</div>
		</div>
		<div class="control-group">
			<label class="control-label">Country</label>
			<div class="controls form-text">@Model.Country</div>
		</div>
		<div class="control-group">
			<label class="control-label">Fax</label>
			<div class="controls form-text">@Model.Fax</div>
		</div>
		
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Delete</button>
            <button type="button" class="btn btn-link">Cancel</button>
        </div>
	</fieldset>
</form>


